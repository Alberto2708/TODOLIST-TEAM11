<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Avoid double brace initialization -->
        <module name="AvoidDoubleBraceInitialization"/>

        <!-- Empty statement detection -->
        <module name="EmptyStatement"/>

        <!-- Avoid equals on null -->
        <module name="EqualsAvoidNull"/>

        <!-- Magic number detection -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="0,1,100,365,6,3,2,4,10"/> <!-- Example: Ignore 0 and 1 -->
        </module>

        <!-- Max nested for loop depth of 3 -->
        <module name="NestedForDepth">
            <property name="max" value="3"/>
        </module>
    </module>
</module>

